<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:id="@+id/dotContainer"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDotUnselected"
        android:layout_width="@dimen/custom_tab_selector"
        android:layout_height="@dimen/custom_tab_selector"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_8dp"
        android:background="@drawable/dot_unselected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDotSelected"
        android:layout_width="@dimen/custom_tab_selector"
        android:layout_height="@dimen/custom_tab_selector"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_8dp"
        android:background="@drawable/dot_selected" />

</FrameLayout>